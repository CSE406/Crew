<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/purple_50"
        android:visibility="gone">

        <android.support.v7.internal.widget.TintCheckBox
            android:id="@+id/tintcheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="128dp"
            android:checked="true" />


        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switchcompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tintcheckbox"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp" />

        <android.support.v7.internal.widget.TintEditText
            android:id="@+id/tintedittxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/switchcompat"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:text="Sample EditText" />

        <android.support.v7.internal.widget.TintRadioButton
            android:id="@+id/tintradio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tintedittxt"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:text="Sample Text" />

        <com.crew.ui.material.FloatingActionButton
            android:id="@+id/fabButton"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="20dp"
            android:textSize="24sp" />


        <com.crew.ui.material.ProgressBarCircular
            android:id="@+id/progress"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_below="@+id/tintradio"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="20dp"
            android:textSize="24sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/purple_50"
        android:visibility="gone">

        <TextView
            android:id="@+id/member_crew_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/layout"
            android:text="Crew Name"
            android:textColor="#000000"
            android:textSize="25dp"
            android:typeface="sans" />

        <TableLayout
            android:id="@+id/member_crew_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/member_crew_name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="#000000"
            android:stretchColumns="*">

            <TableRow>

                <TextView
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#ffffff"
                    android:text="loup"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />

                <TextView
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginTop="1dp"
                    android:background="#ffffff"
                    android:text="noir"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="#ffffff"
                    android:text="Red"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />

                <TextView
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="#ffffff"
                    android:text="Hot"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="#ffffff"
                    android:text="Chili"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />

                <TextView
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="#ffffff"
                    android:text="Peppers"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="1dp"
                    android:background="#ffffff"
                    android:text="Hi"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />

                <TextView
                    android:layout_marginBottom="1dp"
                    android:layout_marginRight="1dp"
                    android:background="#ffffff"
                    android:gravity="center_horizontal"
                    android:text="Hello"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/purple_50"
        android:visibility="gone">

        <TextView
            android:id="@+id/option_crew_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/layout"
            android:text="Crew Name"
            android:textColor="#000000"
            android:textSize="25dp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/option_option_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/option_crew_name"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/layout"
            android:text="Option"
            android:textColor="#000000"
            android:textSize="25dp"
            android:typeface="sans" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/option_option_text"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">

            <TableRow>

                <TextView
                    android:id="@+id/text_notice_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notice Show"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:typeface="sans" />

                <android.support.v7.internal.widget.TintCheckBox
                    android:id="@+id/option_notice_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginLeft="100dp"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/text_timetable_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timetable Show"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:typeface="sans" />

                <android.support.v7.internal.widget.TintCheckBox
                    android:id="@+id/option_timetable_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:layout_marginLeft="100dp"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true">
            <TableRow>

                <Button
                    android:id="@+id/option_button_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:text="Save"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />


                <Button
                    android:id="@+id/option_button_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:background="#ffffff"
                    android:text="Cancel"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/purple_50"
        android:visibility="visible">

        <TextView
            android:id="@+id/author_crew_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/layout"
            android:text="Crew Name"
            android:textColor="#000000"
            android:textSize="25dp"
            android:typeface="sans" />

        <TextView
            android:id="@+id/author_text_authorize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/author_crew_name"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/layout"
            android:text="Authorize"
            android:textColor="#000000"
            android:textSize="25dp"
            android:typeface="sans" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/author_text_authorize"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true">

            <TableRow>

                <TextView
                    android:id="@+id/text_author1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="You give(or deprive) Authority of Staff to"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/author_list1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="컨텍스트인가"
                    android:textColor="#000000"
                    android:layout_marginLeft="100dp"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/text_author2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="You turn over all your rights of Crew`s to"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/author_list2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="아니면 리스트메뉴아이템뷰인가"
                    android:textColor="#000000"
                    android:layout_marginLeft="100dp"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true">
            <TableRow>

                <Button
                    android:id="@+id/author_button_ok"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffffff"
                    android:text="Ok"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />


                <Button
                    android:id="@+id/author_button_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="30dp"
                    android:background="#ffffff"
                    android:text="Cancel"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:typeface="sans" />
            </TableRow>
        </TableLayout>

    </RelativeLayout>
</FrameLayout><!-- From: file:/Users/loupnoir/Downloads/Crew-master/app/src/main/res/layout/fragment_crew.xml -->