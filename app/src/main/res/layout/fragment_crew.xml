<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/content_frame"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/crewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <TextView
            android:id="@+id/crewlistTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/border_black"
            android:gravity="center"
            android:text="Crew List"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="15dp"/>

        <Button
            android:id="@+id/addCrewButton"
            android:layout_below="@id/crewlistTextView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:padding="10dp"
            android:background="@drawable/border_black"
            android:text="Make new Crew"
            android:textColor="@android:color/black" />

        <ListView
            android:id="@+id/crewListView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/addCrewButton"
            android:layout_centerHorizontal="true">
        </ListView>

        <TextView
            android:id="@+id/articleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crewListView"
            android:text=" We have many activities in our\nlife. And we like to meet other,\nwho have same hobby and same\n goals. We called this group to"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/crewTextView"
            android:layout_below="@+id/articleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crew."
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/addCrewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/makeCrewTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/border_black"
            android:gravity="center"
            android:text="Make Crew"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="15dp"/>

        
        <LinearLayout
            android:id="@+id/inputLayout"
            android:layout_below="@+id/makeCrewTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    android:background="@drawable/border_black"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:background="@drawable/border_black"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    android:background="@drawable/border_black"
                    android:gravity="center"
                    android:text="Division"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:background="@drawable/border_black"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:background="@drawable/border_black"
                android:gravity="center"
                android:text="Explain"
                android:textColor="@android:color/black"/>


            <EditText
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:background="@drawable/border_black"
                android:textColor="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/inputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:gravity="center" >

            <Button
                android:id="@+id/saveCrewButton"
                android:layout_below="@id/crewlistTextView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:padding="10dp"
                android:background="@drawable/border_black"
                android:text="SAVE"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/cancelCrewButton"
                android:layout_below="@id/crewlistTextView"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="30dp"
                android:padding="10dp"
                android:background="@drawable/border_black"
                android:text="CANCEL"
                android:textColor="@android:color/black" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/crewDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/crewNameTextView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/border_black"
            android:gravity="center"
            android:text="Crew Name"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/crewTodayTextView"
            android:layout_below="@id/crewNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/border_black"
            android:text="Today's"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/crewWeekTextView"
            android:layout_below="@id/crewNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/border_black"
            android:text="Week's"
            android:textColor="@android:color/black" />

        <ListView
            android:id="@+id/crewTodayListView"
            android:layout_below="@+id/crewTodayTextView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true">
        </ListView>

        <TextView
            android:id="@+id/crewNoticeTextView"
            android:layout_below="@id/crewTodayListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/border_black"
            android:text="Notice"
            android:textColor="@android:color/black" />

        <ListView
            android:id="@+id/crewNoticeListView"
            android:layout_below="@+id/crewNoticeTextView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true">
        </ListView>

    </RelativeLayout>

</FrameLayout>