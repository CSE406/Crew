<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.crew.ui.crew.CrewDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"/>

    <TextView
        android:id="@+id/crewNameTextView"
        android:layout_below="@+id/toolbar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/border_black"
        android:gravity="center"
        android:text="Crew Name"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="15dp"/>

    <RelativeLayout
        android:id="@+id/addCrewLayout"
        android:layout_below="@+id/crewNameTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/inputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    android:background="@drawable/border_black"
                    android:gravity="center"
                    android:text="Title"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:background="@drawable/border_black"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center" >

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="35dp"
                    android:padding="10dp"
                    android:background="@drawable/border_black"
                    android:gravity="center"
                    android:text="Importance"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:background="@drawable/border_black"
                    android:textColor="@android:color/black"/>

            </LinearLayout>

            <TextView
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:padding="10dp"
                android:background="@drawable/border_black"
                android:gravity="center"
                android:text="Explain"
                android:textColor="@android:color/black"/>


            <TextView
                android:id="@+id/noticeExplainTextView"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:background="@drawable/border_black"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>