<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.crew.ui.crew.CrewDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"/>

    <TextView
        android:id="@+id/crewNameTextView"
        android:layout_below="@+id/toolbar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/border_black"
        android:gravity="center"
        android:text="Crew Name"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="15dp"/>

    <RelativeLayout
        android:id="@+id/crewDetailLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/crewNameTextView"
        android:visibility="visible">

        <TextView
            android:id="@+id/crewTodayTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/border_black"
            android:text="Today's"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/crewWeekTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/border_black"
            android:text="Week's"
            android:textColor="@android:color/black" />

        <ListView
            android:id="@+id/crewTodayListView"
            android:layout_below="@+id/crewTodayTextView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true">
        </ListView>

        <TextView
            android:id="@+id/crewNoticeTextView"
            android:layout_below="@id/crewTodayListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/border_black"
            android:text="Notice"
            android:textColor="@android:color/black" />

        <ListView
            android:id="@+id/crewNoticeListView"
            android:layout_below="@+id/crewNoticeTextView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true">
        </ListView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/leadersLayout"
        android:layout_below="@+id/crewNameTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/leadersTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/border_black"
            android:text="Leader's"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"/>

        <Button
            android:id="@+id/inviteButton"
            android:layout_below="@id/leadersTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:background="@drawable/border_black"
            android:text="Invite Member"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/changeButton"
            android:layout_below="@id/inviteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:background="@drawable/border_black"
            android:text="Change Member"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/authorizeButton"
            android:layout_below="@id/changeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:background="@drawable/border_black"
            android:text="Authorization"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/deleteButton"
            android:layout_below="@id/authorizeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:background="@drawable/border_black"
            android:text="Delete Crew"
            android:textColor="@android:color/black"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/closeButton"
            android:layout_below="@id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:background="@drawable/border_black"
            android:text="Ok"
            android:textColor="@android:color/black"
            android:layout_marginTop="40dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/memberLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/crewNameTextView"
        android:visibility="gone">

        <TextView
            android:id="@+id/memberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/border_black"
            android:text="Members"
            android:textColor="@android:color/black" />

        <ListView
            android:id="@+id/memberListView"
            android:layout_below="@+id/memberTextView"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true">
        </ListView>

        <Button
            android:id="@+id/closeButton2"
            android:layout_below="@id/memberListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:background="@drawable/border_black"
            android:text="Ok"
            android:textColor="@android:color/black"
            android:layout_marginTop="40dp"/>


    </RelativeLayout>

    <com.crew.ui.material.FloatingActionButton
        android:id="@+id/crewDetailMenuButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:textSize="24sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="25dp" />

</RelativeLayout>
